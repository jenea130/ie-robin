.main-menu {
  display: flex;
  align-items: center;
  z-index: 2;
  transition: all 0.3s;
  @media screen and (max-width: 992px) {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
    background: rgba(white, 0.8);
    z-index: 1000;
    opacity: 0;
    pointer-events: none;
    transform: scale(1.3);
  }
  &.fixed {
    opacity: 1;
    pointer-events: initial;
    transform: scale(1);
  }
  li {
    &.current-menu-item {
      a {
        &::before {
          transform: translateY(0);
          opacity: 1;
        }
      }
    }
  }
  a {
    position: relative;
    display: block;
    font-size: 1.6rem;
    padding: 3.2rem 2.4rem;
    color: #fff;
    transition: all 0.6s;
    &:hover {
      background: #5221e6;
    }
  }
}
